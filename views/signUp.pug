doctype html 
html
    head 
        style   
            include ../css/style.css
        title Student Data- SignUP
    body 
        include ./includes/nav.pug
        main.main_class 
            div.signup_form 
                .heading
                    h2 CREATE YOUR ACCOUNT!
                form(action="/signUp" method="POST") 
                    .form
                        label.form_label(for="your_name") Your Name
                        input.your_Name(type="text" name="your_name" id="your_name" placeholder="First name")
                        br
                        label.form_label(for="your_email") Email
                        input.your_Name(type="email" name="your_email" id="your_email" placeholder="you@example.com")
                        br
                        label.form_label(for="your_password") Password
                        input.your_Name(type="password" name="your_password" id="your_password" placeholder=".........")
                        br
                        label.form_label(for="confirm_password") Confirm Password
                        input.your_Name(type="password" name="confirm_password" id="confirm_password" placeholder=".........")
                        br
                        button.form_button(type="submit" value="SignUp") submit
